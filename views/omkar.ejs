<body>
  <div class="container">
    <h1 class="text-center mt-5">
      Mini Youtube Search App
    </h1>
    <form action="/" method="post">
      <div class="form-group">
        <input type="text" class="form-control" name="search" id="search">
        <!-- <input class="form-control" type="text" name="search" id="search"> -->

      </div>
      <div class="form-group">
              <br />
              <label  class=""for="cars">Pagentation:</label>
              <select  name="Pagentation" id="cars">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              </select>
            </br>
            <label  class="mt-3"for="cars">Max Videos:</label>
            <select  name="maxvideos" id="cars">
            <option value="8">8</option>
            <option value="10">10</option>

            </select>
          </br>
          </br>
          <!-- <button class="btn btn-danger" type="submit">Search Videos</button> -->


        <button class="btn btn-danger" type="submit">Search Videos</button>

      </div>
    </form>



    <% if(KindOfDays.length!=0){ %>


    <div   class="row">
        <div class="col-md-6">
            <div id="videos">
              <% for(let i=0; i<KindOfDays.length/2;i++){ %>



                <div class="box">

                <center>

               <iframe allowfullscreen width="400" height="400" src= <%= KindOfDays[i] %> ></iframe></center>
                </div>



            <% } %>
            </div>
        </div>

        <div class="col-md-6">
            <div id="videos">
              <% for(let i=KindOfDays.length/2; i<KindOfDays.length;i++){ %>



                <div class="box">

                <center>

               <iframe allowfullscreen width="400" height="400" src= <%= KindOfDays[i] %> ></iframe></center>
                </div>



            <% } %>
            </div>
        </div>


    </div>

    <% } else{ %>
    <center>
      <h3>Search something.......</h3>
    </center>
    <% } %>






</body>
